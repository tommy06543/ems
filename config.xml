<?xml version='1.0' encoding='utf-8'?>
<widget id="com.growthments.ems" version="1.0.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EMS</name>
    <description>
        Growthment Technology CO., LTD. 
    </description>
    <author email="tommy@shh.tw" href="http://shh.tw">
        Growthment Technology CO., LTD.
    </author>
    <content src="index.html" />
    <preference name="phonegap-version" value="cli-7.0.1" />
    <preference name="pgb-builder-version" value="2" /> 
    <preference name="DisallowOverscroll" value="true" />
    <preference name="SplashScreenDelay" value="0"/>
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.3" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.3" />
    <plugin name="cordova-plugin-splashscreen" spec="~5.0.2" />
    <plugin name="phonegap-plugin-push" spec="~2.0.0" />
    <!--plugin name="cordova-plugin-firebase" spec="~0.1.20" /-->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="14" />
        <preference name="android-targetSdkVersion" value="28" />
        <preference name="android-windowSoftInputMode" value="adjustResize" />
        <preference name="BackgroundColor" value="0xff795548"/>
        <icon src="res/icon/android/mipmap-ldpi/launcher.png" density="ldpi" />
        <icon src="res/icon/android/mipmap-mdpi/launcher.png" density="mdpi" />
        <icon src="res/icon/android/mipmap-hdpi/launcher.png" density="hdpi" />
        <icon src="res/icon/android/mipmap-xhdpi/launcher.png" density="xhdpi" />
        <icon src="res/icon/android/mipmap-xxhdpi/launcher.png" density="xxhdpi" />
        <icon src="res/icon/android/mipmap-xxxhdpi/launcher.png" density="xxxhdpi" />
        <resource-file src="google-services.json" target="/google-services.json" />
     
        <config-file platform ="android" parent ="/manifest" mode ="merge">
           <application android:usesCleartextTraffic="true" /> 
        </config-file>
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
            <activity android:usesCleartextTraffic="true" />
        </edit-config>
     
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
        <preference name="BackgroundColor" value="0xff000000"/>
        <preference name="FadeSplashScreenDuration" value="0"/>
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-20x20@1x.png" width="20" height="20" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-20x20@2x.png" width="40" height="40" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-20x20@3x.png" width="60" height="60" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-29x29@1x.png" width="29" height="29" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-29x29@2x.png" width="58" height="58" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-29x29@3x.png" width="87" height="87" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-40x40@1x.png" width="40" height="40" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-40x40@2x.png" width="80" height="80" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-40x40@3x.png" width="120" height="120" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-57x57@1x.png" width="57" height="57" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-57x57@2x.png" width="114" height="114" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-60x60@1x.png" width="60" height="60" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-60x60@2x.png" width="120" height="120" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-60x60@3x.png" width="180" height="180" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-72x72@1x.png" width="72" height="72" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-72x72@2x.png" width="144" height="144" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-76x76@1x.png" width="76" height="76" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-76x76@2x.png" width="152" height="152" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-76x76@3x.png" width="228" height="228" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-App-83.5x83.5@2x.png" width="167" height="167" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-Small-50x50@1x.png" width="50" height="50" />
        <icon src="res/icon/ios/AppIcon.appiconset/Icon-Small-50x50@2x.png" width="100" height="100" />
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
        <resource-file src="GoogleService-Info.plist" />
    </platform>
</widget>
